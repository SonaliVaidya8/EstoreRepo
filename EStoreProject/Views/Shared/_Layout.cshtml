    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Maven Pro', sans-serif;
        }
        .footer_style dt {
            font-size: 1.5rem;
        }
            .footer_style {
            background: #2c2c54;
            color: white;
        }
          .footer_style p {
                    color: #8a8a8a;
                    font-size: 1.4rem;
                }
        .footer_style h4 {
            color: red;
            font-size: 2rem;
        }

                .footer_style a {
                    text-decoration: none;
                    color: white;
                    font-size: 1.4rem;
                }

            a:hover {
                text-decoration: none;
                color: #4bcffa;
            }
        .d-flex div {
            text-align: center;
            border-right: 1px solid grey;
            border-top: 1px solid grey;
        }

            .d-flex div:last-child {
                border-right: none;
            }

            


        header {
            background: radial-gradient(#fff,#ffd6d6);
            width: 100%;
            height: 122px;
            color:rebeccapurple;

        }

        footer {
            background-color: darkslategray;
        }

        nav ul li {
            display: inline-block;
        }

        a {
            text-decoration: none;
            color: #555;
        }

        .container {
            max-width: 800px;
        }

        .row {
            display: flex;
            align-items: center;
            flex-wrap: wrap;
            justify-content: space-around;
        }

        .nav-item {
            font-size: 30px;
            font-style: inherit;
            margin-top: 10px;
        }
    </style>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EStoreProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
