                        <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a  class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Logout">Logout</a>
                        </li>
                    }
                  

                    <li class="nav-item">

                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Cart"><i class="fa fa-shopping-cart fa-2x"></i></a>

                    </li>
                </ul>
            </div>
        </nav>
