@model EStoreProject.Model.Products

@{
    ViewData["Title"] = "ProductDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br>
<br>

<h2>Product Details</h2>
<form method="post">
    <div class="col-8">

        <div class="form-group row">
            <div class="col-8">
                <h2> @Html.DisplayFor(model => model.ProductName)</h2>
            </div>
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-4">
                @Html.DisplayNameFor(model => model.ProductPrice)
            </div>
            <div class="col-8">
                @Html.DisplayFor(model => model.ProductPrice)
            </div>
            <span asp-validation-for="ProductPrice" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-4">
                @Html.DisplayNameFor(model => model.ProductSize)
            </div>
            <div class="col-8">
                @Html.DisplayFor(model => model.ProductSize)
            </div>
            <span asp-validation-for="ProductSize" class="text-danger"></span>
        </div>

            <div class="form-group row">
                <div class="col-4">
                    @Html.DisplayNameFor(model => model.ProductDescription)
                </div>
                <div class="col-8">
                    @Html.DisplayFor(model => model.ProductDescription)
                </div>
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    @Html.DisplayNameFor(model => model.ProductRating)
                </div>
                <div class="col-8">
                    @Html.DisplayFor(model => model.ProductRating)
                </div>
                <span asp-validation-for="ProductRating" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    @Html.DisplayNameFor(model => model.ProductImage)
                </div>
                <div class="col-8">
                    @Html.DisplayFor(model => model.ProductImage)
                </div>
                <span asp-validation-for="ProductImage" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    @Html.DisplayNameFor(model => model.ProductCategoryName)
                </div>
                <div class="col-8">
                    @Html.DisplayFor(model => model.ProductCategoryName)
                </div>
                <span asp-validation-for="ProductCategoryName" class="text-danger"></span>
            </div>

            <div>
                <div class="form-group row">
                    <div class="col-8">

                        <input type="submit" class="btn bg-primary text-white" value="Add to Cart" />
                        &nbsp;
                        <a asp-action="Index" class="btn btn-success" width="100%">Back to List</a>
                    </div>
                </div>
            </div>

        </div>


        <div class="col-1"></div>
        <div class="col-3">
            @if (Model.ProductImage != null)
            {
                <img src="~/Images/@Model.ProductImage" width="40" />
            }
        </div>
</form>
<style>
    h2 {
        color: #277582;
    }
</style>
